{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build ${workspaceFolderBasename} in Release",
			"type": "shell",
			"command": "g++ -m64 -shared -O3 -o $(Get-ChildItem -Include *.cpp, *.c, *.cxx -File -Recurse | ForEach-Object $_.FullName) -ld3d11 -lDxgi -lD3dcompiler_47 -I include -o ./build/${workspaceFolderBasename}.dll",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build ${workspaceFolderBasename} in Debug",
			"type": "shell",
			"command": "g++ -m64 -shared -g -Og -o $(Get-ChildItem -Include *.cpp, *.c, *.cxx -File -Recurse | ForEach-Object $_.FullName) -ld3d11 -lDxgi -lD3dcompiler_47 -I include -o ./build/${workspaceFolderBasename}.dll",
			"group": {
				"kind": "build",
			}
		}
	]
}
